<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="462.0" prefWidth="908.0"
	xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.ControllerCadUsuario">
	<children>
		<SplitPane dividerPositions="0.274" layoutX="82.0"
			layoutY="120.0" prefHeight="400.0" prefWidth="400.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<items>
				<AnchorPane minHeight="0.0" minWidth="0.0"
					prefHeight="160.0" prefWidth="100.0">
					<children>
						<Label layoutX="14.0" layoutY="14.0"
							text="Tecla 'ENTER' para buscar" />
						<TextField fx:id="buscarUsuarios" layoutX="14.0"
							layoutY="32.0" prefHeight="26.0" prefWidth="206.0" />
						<TableView fx:id="TableViewUsuarios" layoutX="12.0"
							layoutY="96.8" prefHeight="404.0" prefWidth="226.0"
							AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
							AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="97.0">
							<columns>
								<TableColumn fx:id="idUsuario" prefWidth="75.0"
									text="ID" />
								<TableColumn fx:id="nomeUsuario" prefWidth="150.0"
									text="Nome" />
							</columns>
							<columnResizePolicy>
								<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							</columnResizePolicy>
						</TableView>
					</children>
				</AnchorPane>
				<AnchorPane minHeight="0.0" minWidth="0.0"
					prefHeight="501.0" prefWidth="585.0">
					<children>
						<TextField fx:id="cNome" layoutX="14.0" layoutY="81.0"
							prefHeight="26.0" prefWidth="220.0" />
						<TextField fx:id="cEmail" layoutX="14.0" layoutY="146.0"
							prefHeight="26.0" prefWidth="220.0" />
						<TextField fx:id="cSenha" layoutX="14.0" layoutY="217.0"
							prefHeight="26.0" prefWidth="220.0" />
						<Label layoutX="181.0" layoutY="14.0"
							text="Cadastro de Usuário">
							<font>
								<Font name="System Bold" size="18.0" />
							</font>
						</Label>
						<Label layoutX="14.0" layoutY="55.0" text="Nome Completo">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
						</Label>
						<Label layoutX="20.0" layoutY="120.0" text="E-mail">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
						</Label>
						<Label layoutX="20.0" layoutY="189.0" text="Senha">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
						</Label>

						<!-- Botões com ações conectadas ao controller -->

						<Button fx:id="BtCriar" layoutX="207.0" layoutY="421.0"
							onAction="#prepararCriacao" text="Criar" />
						<Button fx:id="BtExcluir" layoutX="146.0" layoutY="421.0"
							onAction="#prepararExclusao" text="Excluir" />
						<Button fx:id="BtEditar" layoutX="91.0" layoutY="421.0"
							onAction="#prepararEdicao" text="Editar" />
						<Button fx:id="BtCancelar" layoutX="517.0" layoutY="421.0"
							onAction="#cancelar" text="Cancelar" />
						<Button fx:id="BtSalvar" layoutX="589.0" layoutY="421.0"
							onAction="#salvar" text="Salvar" />
						<Button fx:id="BtSair" layoutX="470.0" layoutY="421.0"
							mnemonicParsing="false" onAction="#BtSair" text="Sair" />
						<Button fx:id="BtBusacr" layoutX="17.0" layoutY="421.0"
							mnemonicParsing="false" onAction="#realizarBusca"
							text="Atualizar" />

					</children>
				</AnchorPane>
			</items>
		</SplitPane>
	</children>
</AnchorPane>